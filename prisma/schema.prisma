// Prisma Schema for Store Location Finder
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Store {
  id           Int      @id @default(autoincrement())
  shop         String?
  store_name   String?
  latitude     Float
  longitude    Float
  salesman     String?
  beat         String?
  created_at   DateTime @default(now())

  @@index([shop, store_name])
  @@index([latitude, longitude])
  @@index([salesman])
  @@index([beat])
  @@map("stores")
}

model Settings {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("settings")
}
